generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model kkutu_ko {
  id    String  @id(map: "kkutu_kr_key") @map("_id") @db.VarChar(256)
  type  String?
  mean  String
  hit   Int     @default(0)
  flag  Int?
  theme String?
}

model User {
  id       String  @id
  name     String  @unique
  score    Int     @default(0)
  password String?
  provider String

  room   Room?   @relation(references: [id], fields: [roomId])
  roomId String?
}

model Room {
  id       String   @id @default(uuid())
  title    String
  password String?
  type     Int
  round    Int
  option   String[]
  total    Int
  start    Boolean  @default(false)

  users User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
