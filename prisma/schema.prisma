generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model kkutu_ko {
  id    String  @id(map: "kkutu_kr_key") @map("_id") @db.VarChar(256)
  type  String?
  mean  String
  hit   Int     @default(0)
  flag  Int?
  theme String?
}

model User {
  id           String  @id
  name         String  @unique
  score        Int     @default(0)
  provider     String
  password     String?
  roomId       String?
  refreshToken String?
  room         Room?   @relation(fields: [roomId], references: [id])
}

model Room {
  id        String   @id @default(uuid())
  title     String
  password  String?
  type      Int
  option    String[]
  start     Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  round     Int
  total     Int
  users     User[]
}

model wakttu_ko {
  id    String  @id @map("_id") @db.VarChar
  type  String?
  mean  String?
  meta  Json?   @db.Json
  hit   Int     @default(0)
  wakta Boolean @default(false)
}

model wakttu_quiz {
  id      Int      @id @default(autoincrement())
  type    String
  qestion String
  answer  String
  hint    String[]
  tag     String[]
}

model wakttu_manner {
  id String @id @map("_id") @db.VarChar
}